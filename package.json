{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "start:backend": "npm run start --workspace=@monorepo/backend",
    "start:frontend": "npm run dev --workspace=@monorepo/frontend",
    "start:dev": "npm run build && concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.9.3",
    "concurrently": "^9.2.1"
  },
  "dependencies": {}
}